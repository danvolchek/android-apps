<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listView"
                android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
                android:layout_below="@+id/scheduleText"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Monday Schedule"
                android:id="@+id/scheduleText"
                android:layout_alignParentStart="true" android:layout_centerVertical="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Location to Monday"
                android:id="@+id/addButton"
                android:elegantTextHeight="false" android:maxLines="1"
                android:layout_below="@+id/spinner" android:layout_alignParentStart="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download Routes"
                android:id="@+id/downloadButton"
                android:layout_alignBottom="@+id/scheduleText" android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true" android:layout_alignParentTop="false"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove Location from Monday"
                android:id="@+id/removeButton" android:layout_below="@+id/addButton" android:layout_alignParentStart="true"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear all locations from Monday"
                android:id="@+id/clearButton" android:layout_below="@+id/removeButton" android:layout_alignParentStart="true"/>
</RelativeLayout>